<%- include("../views/partials/header") %>
<link href="https://fonts.googleapis.com/css2?family=Shadows+Into+Light+Two&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Handlee&display=swap" rel="stylesheet">
<link rel="stylesheet" href="faq.css">
<title>Home | Make My Blog</title>
</head>

<body>

    <section id="navbar">
        <nav class="navbar navbar-expand-lg ">
            <a class="navbar-brand" href="/"><i class="fas fa-pen-nib"></i> Make My Blog</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <a class="nav-item nav-link" href="#">Blogs</a>
                    <a class="nav-item nav-link" href="#">About Us</a>
                    <a class="nav-item nav-link active" href="/faq">Faq</a>
                    <a class="nav-item nav-link disabled" href="#">Disabled</a>
                </div>

                <div class="navbar-nav ml-auto">
                    <a class="nav-item nav-link" href="/register">Sign Up</a>
                    <a class="nav-item nav-link" href="/login">Login</a>
                </div>
            </div>

        </nav>
    </section>
    <section>
        <!-- //Header Image -->
        <div class="scallop-up"></div>
        <div id="header">
            <h1 class="text-center display-3 py-5 mb-0">Frequently Asked Questions</h1>
        </div>

        <div class="scallop-down"></div>
    </section>

<section class="mt-3">
   <div class="container w-75">
       <%allFaq.forEach(function(faq){ 
        var date = new Date(faq.created);  // dateStr you get from mongodb
        %>
    <ul>
        <li id="eachPart">
            <p id="question" class="px-4 pt-4">
                <%= faq.title %>
            </p>
           
            <div id="answer">
                <div class="d-flex justify-content-center pb-5">
                    <img src="<%=faq.image%>" alt="" class="w-50 img-thumbnail">
                </div>
               <p class="px-4 pb-3 text-justify"> 
                   <%= faq.content%>
                </p>
                <p class="px-4 pb-3 text-justify">
                    <%=date.toDateString()%>
                 </p>
            </div>
        </li>
    </ul>
    <%})%>
   </div> 
</section>

    <%- include("../views/partials/bottomNavbar") %>

    <%- include("../views/partials/footer") %>