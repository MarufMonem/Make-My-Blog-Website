<%- include("../views/partials/header") %>
<link href="https://fonts.googleapis.com/css2?family=Shadows+Into+Light+Two&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Handlee&display=swap" rel="stylesheet">
<link rel="stylesheet" href="/../adminFaqUpdate.css">
<title>Admin | FAQ Update</title>
</head>

<body>
    <%- include("../views/partials/alertMsgInteractive") %>
    <%- include("../views/partials/adminNav") %>

    <section>
        <!-- //Header Image -->
        <div class="scallop-up"></div>
        <div id="header">
            <h1 class="text-center display-3 py-5 mb-0">Admin: FAQ Update</h1>
        </div>

        <div class="scallop-down"></div>
    </section>
    <%- include("../views/partials/alertMsg") %>

    <br>
    <!-- Body content -->
    <section>
        <div class="container-fluid">
            <div class="container">
                <!-- Form -->
                <h1 id="faqId" class="text-center">FAQ ID: <%=foundFaq._id%></h1>
                <form class=" mx-auto w-75" action="/faq/update/<%=foundFaq._id%>?_method=PUT" method="POST" id="form">
                    <div class="form-group">
                        <label>Title</label>
                        <input type="name" class="form-control" placeholder="Enter title" name=faq[title] value="<%=foundFaq.title %>">
                    </div>
                    <div class="form-group">
                        <label>Image</label>
                        <input type="name" class="form-control" placeholder="Enter image link" name=faq[image] value="<%=foundFaq.image %>">
                    </div>
                    <div>
                        <img src="<%=foundFaq.image%>" alt="" class="img-thumbnail mb-2">
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        <textarea class="form-control" name=faq[content] rows="10"
                            placeholder="Description here"><%=foundFaq.content %></textarea>
                    </div>
                    <button type="submit" class="btn btn-danger w-100">Submit</button>
                </form>
            </div>

        </div>
    </section>

    <section class="mt-3">

    </section>

    <%- include("../views/partials/bottomNavbar") %>
    <%- include("../views/partials/footer") %>